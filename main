from support import int_list_creator, _gcd
from random import randint


def main():
    try:
        print("This program generates from 2 up to 20 integers and finds their gcd.")
        print("GCD - greatest common divisor.")
        limit = int(input("Enter maximum number -> "))
        amount = randint(2, 20)
        lst = int_list_creator(amount, limit)
        print("Integers -> ", *lst, sep=", ")
        print("GCD -> ", _gcd(lst))
    except ValueError:
        print("Incorrect input, you are supposed to enter single integer, which is bigger than 0.")


if __name__ == '__main__':
    main()
